<?xml version="1.0" ?>
<odoo>
    <template id="report_users_table_template">
        <t t-foreach="docs" t-as="res_users">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <strong>Salesman: </strong>
                            <span t-field="res_users.name" />
                        </h1>
                        <t t-foreach="res_users.property_ids" t-as="property">
                            <h2>
                                <span t-field="property.name" />
                            </h2>
                            <div>
                                <p>
                                    <strong>Expected Price: </strong>
                                    <span t-field="property.expected_price" />
                                </p>
                                <p>
                                    <strong>Status: </strong>
                                    <span t-field="property.state" />
                                </p>
                            </div>
                            <t t-call="real_estate.report_property_offers_table_template">
                                <t t-set="property_obj" t-value="property" />
                            </t>
                        </t>
                        <t t-if="not res_users.property_ids">
                            <p>Â¡No properties for this salesman!</p>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
